{
  "name": "dil-reaktoru-extension",
  "version": "1.0.1",
  "description": "Browser extension for language learning with AI translation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "bump": "node -e \"const pkg=require('./package.json');const m=require('./public/manifest.json');const v=pkg.version.split('.').map(Number);v[2]++;pkg.version=v.join('.');m.version=pkg.version;require('fs').writeFileSync('./package.json',JSON.stringify(pkg,null,2));require('fs').writeFileSync('./public/manifest.json',JSON.stringify(m,null,2));console.log('Version bumped to '+pkg.version);\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  }
}
